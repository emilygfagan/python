<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 20
        spacing: 20

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)
        
        GridLayout:
            cols: 4
            rows: 5

            # Row
            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: "AC"
                background_color: (152/255,251/255,152/255,1)
                background_normal: ''
                on_press: root.clear()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-"
                background_color: (152/255,251/255,152/255,1)
                background_normal: ''
                on_press: root.pos_neg()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: u"\u00AB"
                background_color: (152/255,251/255,152/255,1)
                background_normal: ''                
                on_press: root.remove()


            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                background_color: (175/255,238/255,238/255,1)
                background_normal: ''
                on_press: root.math_sign('/')

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(7)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(8)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(9)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                background_color: (175/255,238/255,238/255,1)
                background_normal: ''
                on_press: root.math_sign('*')

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(4)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(5)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(6)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                background_color: (175/255,238/255,238/255,1)
                background_normal: ''
                on_press: root.math_sign('-')

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(1)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(2)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(3)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                background_color: (175/255,238/255,238/255,1)
                background_normal: ''
                on_press: root.math_sign('+')

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.button_press(0)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "%"
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.percent()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "."
                background_color: (255/255.0,182/255,193/255,1)
                background_normal: ''
                on_press: root.period()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="
                background_color: (175/255,238/255,238/255,1)
                background_normal: ''
                on_press: root.equals()
